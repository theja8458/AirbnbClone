<% layout("/layouts/boilerplate.ejs") -%>

<body>
    
  <div class="row mt-3">
    <div class="col-8 offset-3">
    <h3> <%= list.title %></h3>
  </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= list.image.url %>" class="card-img-top show-img" alt="listing_image" >
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b><br> <br>
          <%= list.description %> <br> 
          &#8377;<%= list.price.toLocaleString("en-IN") %> <br> 
          <%= list.location %> <br>
          <%= list.country %>
        </p>
      </div>
    </div>
  <br>
<div class="btns mb-5">
  <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
  <form method ="post" action="/listings/<%= list._id %>?_method=delete">
    <button class="btn btn-dark  offset-5 ">Delete</button>
  </form>
</div>

  <div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a review</h4>
     <form action="/listings/<%= list._id %>/review" method="post">
      <div class="mb-3 mt-3" >
        <label for="rating" class="form-label">Rating</label>
        <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range" >
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
     </form>
  </div>
</div>
</body>
